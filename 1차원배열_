♥ 1단계 _ 10818번
(런타임에러(OutOfBounds)_컨테이너 또는 배열에서 할당된 경계를 넘어가는 접근 발생) 

#include <stdio.h>
int main() {
	int num;
	int min = 1000000, max = -1000000;
	int arr[1000000];

	scanf_s("%d", &num);

	for (int i = 0; i < num; i++) {
		scanf_s("%d", &arr[i]);
	}

	for (int j = 0; j < num; j++) {
		if (min > arr[j])
			min = arr[j];

		if (max < arr[j])
			max = arr[j];
	}

	printf("%d %d", min, max);
	return 0;
}

♥ 2단계 _ 2562번

#include <stdio.h>
int main(void) {
	int i = 0;
	int a, min = 0;
	int arr[100];

	for (; i < 9; i++) {
		scanf_s("%d", &arr[i]);
		if (min < arr[i]) {
			min = arr[i];
			a = i;
		}
	}

	printf("%d\n%d", min, a + 1);
}

