♥ 1단계 _ 10818번
(런타임에러(OutOfBounds)_컨테이너 또는 배열에서 할당된 경계를 넘어가는 접근 발생) 

#include <stdio.h>
int main() {
	int num;
	int min = 1000000, max = -1000000;
	int arr[1000000];

	scanf_s("%d", &num);

	for (int i = 0; i < num; i++) {
		scanf_s("%d", &arr[i]);
	}

	for (int j = 0; j < num; j++) {
		if (min > arr[j])
			min = arr[j];

		if (max < arr[j])
			max = arr[j];
	}

	printf("%d %d", min, max);
	return 0;
}

♥ 2단계 _ 2562번

#include <stdio.h>
int main(void) {
	int i = 0;
	int a, min = 0;
	int arr[100];

	for (; i < 9; i++) {
		scanf_s("%d", &arr[i]);
		if (min < arr[i]) {
			min = arr[i];
			a = i;
		}
	}

	printf("%d\n%d", min, a + 1);
}

♥ 3단계 _ 2577번

#include <stdio.h>

int main(void) {
	int a, b, c, n;
	int arr[10] = { 0 };

	scanf_s("%d", &a);
	scanf_s("%d", &b);
	scanf_s("%d", &c);

	int sum = a * b * c;

	//for문보다 while문이 더 적합
	while (sum > 0) {
		n = sum % 10;        //10으로 나눈 나머지 = 증가시킬 인덱스 
		                     //변수 대입할 때, 등호 왼쪽 : 변수, 등호 오른쪽 : 값
		sum /= 10;           //sum값을 10으로 나눴을 때의 몫으로 바꿔준다
		arr[n]++;            //n에 해당하는 인덱스의 값을 1 증가시켜준다
	}
	

	for (int i = 0; i < 10; i++) {
		printf("%d\n", arr[i]);
	}
}

♥ 4단계 _ 3052번

#include <stdio.h>

int main(void) {
	int arr[43] = { 0 };
	int num;
	int sum = 0;
	for (int i = 0; i < 10; i++) {
		scanf_s("%d", &num);
		int a = num % 42;
		arr[a]++;
	}

	for (int j = 0; j < 43; j++) {
		if (arr[j] != 0)
			sum += 1;
		else
			continue;
	}

	printf("%d", sum);
	return 0;
}

